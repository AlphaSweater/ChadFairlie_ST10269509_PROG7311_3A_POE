@model WebApp.ViewModels.EmployeeViewModels.AddFarmerViewModel

@{
	ViewData["Title"] = "Edit Farmer Profile";
}

<style>
	.form-label {
		font-weight: 600;
		color: #5e4c3b;
		margin-bottom: 0.25rem;
		display: flex;
		align-items: center;
		gap: 0.4rem;
	}

	.form-check-input {
		width: 1.25rem;
		height: 1.25rem;
		margin-top: 0.2rem;
		cursor: pointer;
	}

	.form-control {
		border-radius: 8px;
		border: 1px solid #ccc;
		transition: border-color 0.2s ease-in-out, box-shadow 0.2s;
	}

		.form-control:focus {
			border-color: #5e8c61;
			box-shadow: 0 0 0 0.15rem rgba(94, 140, 97, 0.25);
		}

	.card {
		background-color: #f8f5ee;
		border: none;
		border-radius: 14px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
	}

	.btn-success {
		background-color: #5e8c61;
		border-color: #5e8c61;
		transition: background-color 0.2s ease-in-out;
	}

		.btn-success:hover {
			background-color: #4b7450;
		}

	.btn-cancel {
		background-color: #e0dcd2;
		color: #6f4e37;
		transition: background-color 0.2s ease-in-out;
	}

		.btn-cancel:hover {
			background-color: #d2ccc0;
			color: #5e4c3b;
		}

	/* Error message styling */
	.text-danger {
		color: #dc3545; /* Bootstrap's default red color for errors */
		font-size: 0.875rem; /* Small font size for better readability */
		margin-top: 0.25rem;
		display: block;
	}
</style>

<div class="container py-5">
	<h2 class="text-success fw-bold mb-4">🌱 Edit a Farmer Profile</h2>

	<div class="card p-5">
		<form asp-action="UpdateFarmer" method="post">
			<div class="row g-4">

				<!-- Hidden fields for CreatedByEmployeeId and CreatedOn and FarmerId -->
				<input type="hidden" asp-for="FarmerId" value="@Model.FarmerId" />
				<input type="hidden" asp-for="CreatedByEmployeeId" value="@Model.CreatedByEmployeeId" />
				<input type="hidden" asp-for="CreatedOn" value="@Model.CreatedOn" />
				<input type="hidden" asp-for="Password" value="dummy" />
				<input type="hidden" asp-for="ConfirmPassword" value="dummy" />

				<div class="col-md-6">
					<label asp-for="FirstName" class="form-label">🧑‍🌾 First Name</label>
					<input asp-for="FirstName" class="form-control" value="@Model.FirstName"/>
					<span asp-validation-for="FirstName" class="text-danger small"></span>
				</div>

				<div class="col-md-6">
					<label asp-for="LastName" class="form-label">🌾 Last Name</label>
					<input asp-for="LastName" class="form-control" value="@Model.LastName" />
					<span asp-validation-for="LastName" class="text-danger small"></span>
				</div>

				<div class="col-12">
					<label asp-for="Email" class="form-label">📧 Email</label>
					<input asp-for="Email" class="form-control" value="@Model.Email" />
					<span asp-validation-for="Email" class="text-danger small"></span>
				</div>

				<div class="col-12 d-flex justify-content-end gap-3 mt-4">
					<a asp-action="ManageFarmers" class="btn btn-cancel px-4">Cancel</a>
					<button type="submit" class="btn btn-success px-4">Update Farmer</button>
				</div>

			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
