<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Agri Energy Connect</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
</head>
<body>
	<div class="d-flex">
		<!-- Sidebar -->
		<nav id="sidebar" class="sidebar">
			<h4 class="text-white px-3">Agri Energy Connect</h4>
			<ul class="nav flex-column">
				<li class="nav-item mb-2">
					<a class="nav-link text-white" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
				</li>
				<li class="nav-item mb-2">
					<a class="nav-link text-white" data-bs-toggle="collapse" href="#manageSubmenu" role="button" aria-expanded="false" aria-controls="manageSubmenu">
						Manage
					</a>
					<div class="collapse ps-3" id="manageSubmenu">
						<a class="nav-link text-white" asp-controller="Account" asp-action="Index">Account</a>
						<a class="nav-link text-white" asp-controller="Products" asp-action="Index">Products</a>
					</div>
				</li>
				<li class="nav-item">
					<a class="nav-link text-white" asp-controller="Auth" asp-action="Logout">Logout</a>
				</li>
			</ul>
		</nav>

		<!-- Main Content -->
		<div class="main-content">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>