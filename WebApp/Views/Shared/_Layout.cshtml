@{
	var role = Context.Session.GetString("UserRole"); // "Farmer" or "Employee"
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Agri Energy Connect</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
</head>
<body>
	<div class="d-flex">
		<!-- Sidebar -->
		<nav id="sidebar" class="sidebar" style="top: 0;">
			<h4 class="text-white ">Agri Energy Connect</h4>
			<ul class="nav flex-column">

				@if (role == "Farmer")
				{
					<li class="nav-item mb-2">
						<a class="nav-link text-white" asp-controller="Farmer" asp-action="Index">Dashboard</a>
					</li>
				}
				else if (role == "Employee")
				{
					<li class="nav-item mb-2">
						<a class="nav-link text-white" asp-controller="Employee" asp-action="Index">Dashboard</a>
					</li>
				}

				<li class="nav-item mb-2">
					<a class="nav-link text-white" data-bs-toggle="collapse" href="#manageSubmenu" role="button" aria-expanded="false" aria-controls="manageSubmenu">
						Manage
					</a>
					<div class="collapse ps-3" id="manageSubmenu">

						@if (role == "Farmer")
						{
							<a class="nav-link text-white" asp-controller="Farmer" asp-action="ManageProducts">My Products</a>
							<a class="nav-link text-white" asp-controller="Account" asp-action="Profile">My Profile</a>
						}
						else if (role == "Employee")
						{
							<a class="nav-link text-white" asp-controller="Product" asp-action="Index">All Products</a>
							<a class="nav-link text-white" asp-controller="Farmer" asp-action="Index">Farmers</a>
							<a class="nav-link text-white" asp-controller="Account" asp-action="Profile">My Profile</a>
						}

					</div>
				</li>

				<li class="nav-item">
					<a class="nav-link text-white" asp-controller="Auth" asp-action="Logout">Logout</a>
				</li>
			</ul>
		</nav>

        <!-- Main Content -->
        <div class="main-content flex-grow-1 p-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
